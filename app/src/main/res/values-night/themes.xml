<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sara_petrovic_rn4520" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/backround_app</item>
    </style>

    <style name="TextViewStyle" parent="Theme.Sara_petrovic_rn4520">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BottomStyle" parent="Theme.Sara_petrovic_rn4520">
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>